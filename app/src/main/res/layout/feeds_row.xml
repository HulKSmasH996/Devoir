<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView2"
    app:cardUseCompatPadding="true"
    android:layout_margin="2.5dp"
    app:cardCornerRadius="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:text="Category of Complaint"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/category"
            android:layout_margin="10dp"
            app:srcCompat="@android:drawable/sym_def_app_icon" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/submittedByText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Submitted By:"
                android:layout_marginLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/submitted_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="User Name"
                android:layout_marginLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/LocationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Location:"
                android:layout_marginLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/submitted_by"
                android:text="Location"
                android:layout_marginLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="17dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/upVoteLinearLay">
                <ImageView
                    android:src="@drawable/ic_thumb_up_black_24dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:text="UpVote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="25dp"
                android:background="@color/cardview_dark_background"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:id="@+id/downVoteLinearLay">
                <ImageView
                    android:src="@drawable/ic_thumb_down_black_24dp"
                    android:layout_marginLeft="17dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:text="DownVote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

    </LinearLayout>


</android.support.v7.widget.CardView>



</RelativeLayout>